generator client {
    provider="prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url= env("DATABASE_URL")
    shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum ShirtSize {
  XS
  S
  M
  L
  XL
  XXL
}

model Edition {
  id         String   @id @default(cuid())
  year       Int      @unique
  name       String   @default("")
  capacity   Int
  nextQueue  Int      @default(0)
  createdAt  DateTime @default(now()) @db.Timestamptz
  updatedAt  DateTime @updatedAt @db.Timestamptz

  teams      Team[]

  @@map("editions")
}

model Team {
    id          String       @id @default(cuid())
  name        String       @unique @db.VarChar(100)
  field       String       @db.VarChar(100)
  leaderName  String       @db.VarChar(100)
  leaderEmail String       @db.VarChar(255)
  leaderPhone String?      @db.VarChar(20)
  createdAt   DateTime     @default(now()) @db.Timestamptz
  updatedAt   DateTime     @updatedAt @db.Timestamptz

  editionId   String
  edition     Edition  @relation(fields: [editionId], references: [id], onDelete: Restrict)
  queueNo     Int

  members     TeamMember[]

  // Indexes for better performance
  @@index([field])
  @@index([leaderEmail])
  @@index([createdAt])
  @@map("teams")
}

model TeamMember {
  id     String  @id @default(cuid())
  name   String  @db.VarChar(100)
  age    String  @db.VarChar(20)
  email  String? @db.VarChar(255)
  phone  String? @db.VarChar(20)
  accommodation  Boolean    @default(false)
  shirtSize      ShirtSize?
  school         String?    @db.VarChar(120)
  diet           String?    @db.VarChar(255)
  consent      Boolean     @default(false)
  teamId String
  team   Team    @relation(fields: [teamId], references: [id], onDelete: Cascade)
  
  @@index([email])
  @@map("team_members")
}

// NEW: Hero Section model for CMS
model HeroSection {
  id              String   @id @default(cuid())
  dateText        String   @db.VarChar(100)
  mainTitle       String   @db.VarChar(200)
  eventDate       String   @db.VarChar(100)
  backgroundImage String   @db.VarChar(500)
  eventDateInfo   String   @db.VarChar(100)
  location        String   @db.VarChar(100)
  audience        String   @db.VarChar(200)
  duration        String   @db.VarChar(50)
  createdAt       DateTime @default(now()) @db.Timestamptz
  updatedAt       DateTime @updatedAt @db.Timestamptz

  @@map("hero_sections")
}

// Future CMS models
model Sponsor {
  id        String   @id @default(cuid())
  name      String   @db.VarChar(100)
  imageUrl  String   @db.VarChar(500)  // Changed from logo to imageUrl for consistency
  website   String?  @db.VarChar(1000)
  tier      String?  @db.VarChar(20) // Made optional
  createdAt DateTime @default(now()) @db.Timestamptz
  updatedAt DateTime @updatedAt @db.Timestamptz

  @@index([tier])
  @@map("sponsors")
}

model GalleryImage {
  id        String   @id @default(cuid())
  url       String   @db.VarChar(500)
  alt       String?  @db.VarChar(200)
  caption   String?  @db.VarChar(300)
  createdAt DateTime @default(now()) @db.Timestamptz
  updatedAt DateTime @updatedAt @db.Timestamptz

  @@index([createdAt])
  @@map("gallery_images")
}

model Introduction {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  features    Feature[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Feature {
  id            Int         @id @default(autoincrement())
  title         String
  description   String
  iconPath      String
  introductionId Int
  introduction  Introduction @relation(fields: [introductionId], references: [id])
}

model MainSponsor {
  id           String   @id @default(cuid())
  sponsorName  String
  sponsorText  String 
  imageUrl     String   @db.VarChar(500)
  website   String?  @db.VarChar(1000)
  createdAt    DateTime @default(now()) @db.Timestamptz
  updatedAt    DateTime @updatedAt @db.Timestamptz
}

model Field {
  id          String   @id @default(cuid())
  name        String
  description String
  icon        String 
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProjectMember {
  id          String   @id @default(cuid())
  name        String
  role        String
  phone       String
  email       String
  imageUrl    String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}